      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <title>Transfer</title>
</head>
<body>
    <div class="container">
    <p>Current Balance: <%= accNo %> </p>
    <div id="form-submit">
        <form method="post" action="/customer/transfer">
            <div class="form-group">
                <hr/>
                <p>From : <%=name %></p>
                <input value="<%=accountNo%>" type="number" name="myAc" required class="form-control" ></input>
                <hr/>
                <p>To : </p>
                <input type="number" name="OppositeAc" required class="form-control" placeholder="Receivers Acc no."></input>
                <input type="number" name="amount" required class="form-control" placeholder="Amount"></input>
                <br/>
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>
    </div>

</body>
</html>